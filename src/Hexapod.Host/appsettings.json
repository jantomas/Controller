{
  "Hexapod": {
    "DeviceId": "hexapod-001",
    "FirmwareVersion": "1.0.0",
    "DefaultMode": "SemiAutonomous",
    
    "Kinematics": {
      "CoxaLength": 50.0,
      "FemurLength": 80.0,
      "TibiaLength": 120.0,
      "BodyRadius": 100.0,
      "DefaultHeight": 80.0,
      "MaxReachRadius": 200.0
    },
    
    "Hardware": {
      "LegCount": 6,
      "JointsPerLeg": 3,
      "ServoControllerAddress": 64,
      "ServoUpdateRate": 50,
      "ServoControllerType": "PololuMaestro",
      "MaestroServo": {
        "Enabled": true,
        "SerialPort": "/dev/ttyACM0",
        "BaudRate": 115200,
        "DeviceNumber": 12,
        "ReadTimeoutMs": 100,
        "WriteTimeoutMs": 100,
        "DefaultMinPwmUs": 500,
        "DefaultMaxPwmUs": 2500,
        "DefaultSpeedLimit": 0,
        "DefaultAccelerationLimit": 0,
        "DisableOnShutdown": true
      }
    },

    "Movement": {
      "MaxSpeed": 0.5,
      "DefaultGait": "Tripod",
      "StepHeight": 30.0,
      "ServoUpdateRate": 50,
      "I2cBusId": 1,
      "Pca9685Address": 64
    },
    
    "Sensors": {
      "GpsSerialPort": "/dev/ttyAMA0",
      "GpsBaudRate": 38400,
      "ImuI2cAddress": 40,
      "ImuI2cBusId": 1,
      "DistanceSensorAddresses": [41, 42, 43, 44, 45, 46],
      "TouchSensorGpioPins": [17, 18, 27, 22, 23, 24],
      "PowerMonitorI2cAddress": 64,
      "PollingIntervalMs": 20
    },
    
    "Vision": {
      "HailoDeviceId": 0,
      "ObjectDetectorModel": "/opt/hexapod/models/yolov8n.hef",
      "TerrainClassifierModel": "/opt/hexapod/models/mobilenetv3_terrain.hef",
      "InputWidth": 640,
      "InputHeight": 640,
      "ConfidenceThreshold": 0.5,
      "NmsThreshold": 0.45,
      "CameraDeviceId": 0,
      "CameraWidth": 1280,
      "CameraHeight": 720,
      "CameraFps": 30
    },
    
    "Communication": {
      "IoTHub": {
        "HostName": "your-iot-hub.azure-devices.net",
        "DeviceId": "hexapod-001",
        "UseDps": true,
        "DpsIdScope": "0ne00XXXXXX",
        "DpsGlobalEndpoint": "global.azure-devices-provisioning.net",
        "CertificatePath": "/etc/hexapod/certs/device.pfx",
        "ModelId": "dtmi:hexapod:controller;1"
      },
      "LoRaWan": {
        "SerialPort": "/dev/ttyUSB0",
        "BaudRate": 115200,
        "DevEui": "0000000000000001",
        "AppEui": "0000000000000001",
        "AppKey": "00000000000000000000000000000001",
        "DataRate": 3,
        "TxPower": 14,
        "EnableAdr": true
      }
    },
    
    "Autonomy": {
      "MinConfidenceThreshold": 0.6,
      "ConfirmationRiskThreshold": "Medium",
      "ConfirmationTimeoutSeconds": 30,
      "TimeoutAction": "SafeAction",
      "MinObstacleClearance": 0.3,
      "MaxMissionDuration": "02:00:00",
      "EnableBoundaryEnforcement": true
    },
    
    "Telemetry": {
      "LocalStoragePath": "/var/lib/hexapod/telemetry",
      "MaxLocalStorageMB": 500,
      "BatchIntervalSeconds": 10,
      "MaxBatchSize": 100,
      "MaxBufferedBatches": 50,
      "UploadIntervalSeconds": 60,
      "EnableCompression": true
    },
    
    "Safety": {
      "MaxTiltAngle": 30.0,
      "MinBatteryPercentage": 15,
      "EmergencyStopOnTilt": true,
      "GeofenceEnabled": true,
      "MaxOperationalRadius": 500.0,
      "HomePosition": {
        "Latitude": 0.0,
        "Longitude": 0.0
      }
    },

    "MockMode": {
      "Enabled": false,
      "MockServos": true,
      "MockSensors": true,
      "MockCommunication": true,
      "MockVision": true,
      "SimulatedServoDelayMs": 5,
      "SimulatedSensorPollingMs": 20,
      "VerboseLogging": true,
      "SimulateNoise": true,
      "NoiseAmplitude": 0.02,
      "SimulatedLatitude": 48.8566,
      "SimulatedLongitude": 2.3522,
      "SimulatedBatteryPercent": 85.0,
      "SimulatedBatteryVoltage": 11.8
    }
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
